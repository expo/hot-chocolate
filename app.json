{
  "expo": {
    "name": "Hot Chocolate App",
    "slug": "hot-chocolate",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "hot-chocolate",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.brents.hot-chocolate",
      "icon": "./assets/app.icon",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-maps",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "This app uses your location to show nearby hot chocolate spots on the map."
        }
      ],
      "expo-font",
      "expo-web-browser",
      "expo-image",
      "expo-sqlite",
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {}
    }
  }
}
